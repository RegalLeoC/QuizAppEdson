<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F1FAEE"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="30sp"
                android:layout_marginTop="5dp"
                android:text="@string/resultados"
                android:textColor="#E63946"
                />

            <ImageView
                android:id="@+id/logoImageResult"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:src="@drawable/img"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="5dp">

            <TextView

                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/puntaje_final"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColor="#1D3557"/>

            <TextView
                android:id="@+id/textViewResultFin"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="20sp"
                tools:text="0"
                android:textColor="#1D3557"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="5dp">

            <TextView

                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/puntacion_por_pregunta"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textColor="#457B9D"/>

            <TextView
                android:id="@+id/textViewQuest"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="18sp"
                tools:text="0"
                android:textColor="#457B9D"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="5dp">

            <TextView

                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/penalizacion_por_pista"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textColor="#457B9D"/>

            <TextView
                android:id="@+id/textViewHist"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="18sp"
                tools:text="0"
                android:textColor="#457B9D"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="5dp">

            <TextView

                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/bonificacion_por_pista_no_utilizada"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textColor="#457B9D"/>

            <TextView
                android:id="@+id/textViewBonf"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="18sp"
                tools:text="0"
                android:textColor="#457B9D"/>
        </LinearLayout>

        <Button
            android:layout_marginTop="2dp"
            android:id="@+id/regresarInicioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/regresar"
            android:backgroundTint="#E63946"
            android:textColor="#1D3557"/>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>